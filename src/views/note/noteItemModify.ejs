<div class="col">
    <div class="card shadow-md bg-dark text-light">
        <h2><%= title  %></h2>
        <div class="card-body">
            <div class="overflow-auto bg-black  p-2" style="max-height: 400px;">
                <pre><%- content  %></pre>
            </div>
        
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group ">                   
                    <form action="/delete_note/<%= id  %>" method="get">
                        <button type="submit" class="btn btn-sm btn-outline-secondary bg-light m-1 text-black">Poista</button>
                    </form>
                    <form action="/modify_note/<%= id  %>" method="get">
                        <button type="submit" class="btn btn-sm btn-outline-secondary bg-light m-1 text-black">Muokkaa</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>